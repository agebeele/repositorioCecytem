<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="solicitudBecas.becas_adapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <!-- Agrega el CheckBox -->
        <CheckBox
            android:id="@+id/checkBoxTramiteRealizado_Beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tramiteAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/checkBoxTramiteRealizado_Beca"
            android:text="Trámite: Beca"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <!-- CURP -->
        <LinearLayout
            android:id="@+id/curpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tramiteAlumno"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/curpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURP:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/curpAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="CURP "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Apellido Paterno -->
        <LinearLayout
            android:id="@+id/paternoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/curpLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paternoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/paternoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Apellido Materno -->
        <LinearLayout
            android:id="@+id/maternoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paternoLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maternoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Materno:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/maternoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Apellido Materno "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!-- Nombre -->
        <LinearLayout
            android:id="@+id/nombreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maternoLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombreAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Repite el mismo patrón para otros campos de datos según sea necesario -->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>