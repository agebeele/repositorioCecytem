<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="solicitudEventos.eventos_adapter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Agrega el CheckBox -->
        <CheckBox
            android:id="@+id/checkBoxTramiteRealizado_Eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tramiteAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/checkBoxTramiteRealizado_Eventos"
            android:text="Registro de Eventos"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <!-- Nombre -->
        <LinearLayout
            android:id="@+id/nombreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tramiteAlumno"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombreAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Matrícula -->
        <LinearLayout
            android:id="@+id/matriculaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matriculaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/matriculaAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Matrícula "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Grupo -->
        <LinearLayout
            android:id="@+id/grupoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/matriculaLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grupoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/grupoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Evento -->
        <LinearLayout
            android:id="@+id/eventoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grupoLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/eventoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Evento"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Repite el mismo patrón para otros campos de datos según sea necesario -->

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>