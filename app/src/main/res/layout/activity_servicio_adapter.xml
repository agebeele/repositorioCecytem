<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="solicitudServicioSocial.servicio_adapter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <!-- Agrega el CheckBox -->
        <CheckBox
            android:id="@+id/checkBoxTramiteRealizado_Servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tramiteAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/checkBoxTramiteRealizado_Servicio"
            android:text="Trámite: Servicio Social"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <!-- Nombre -->
        <LinearLayout
            android:id="@+id/nombreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tramiteAlumno"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombreAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Matrícula -->
        <LinearLayout
            android:id="@+id/grupoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grupoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/grupoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Matrícula "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Apellido Paterno -->
        <LinearLayout
            android:id="@+id/turnoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grupoLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/turnoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/turnoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Apellido Materno -->
        <LinearLayout
            android:id="@+id/dependenciaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/turnoLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dependenciaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dependencia:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dependenciaAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Dependencia "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Repite el mismo patrón para otros campos de datos según sea necesario -->

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>