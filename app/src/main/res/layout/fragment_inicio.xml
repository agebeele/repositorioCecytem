<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_1"
    tools:context=".alumnos.Activity_Inicio">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <!-- TextView "Inicio" -->
        <TextView
            android:id="@+id/inicio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textAlignment="center"
            android:textColor="@color/verde_2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- View para la línea de separación -->
        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/inicio_text" />

        <!-- RecyclerView debajo del TextView y del separador -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_inicio"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/separator_line"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>
